---
import Image from "astro/components/Image.astro";
import fotoSergio from '../assets/imagen-sergio-2.webp'
import { useTranslations } from "../i18n/utils";
const lang = (Astro.url.pathname.split('/')[1] as "es" | "en") || 'es';
const t = useTranslations(lang);
---

<section id="aboutme" data-section="aboutme" class="py-16">
  <div class="container mx-auto px-5">
    <h1  class="text-3xl font-bold bg-gradient-to-r from-cyan-500 to-blue-500 text-transparent bg-clip-text mb-6">
      {t('about-me')}
    </h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-stretch">
      <div class="flex flex-col">
        <p>
            {t('sobre-mi-1')}
        </p>
        <p class="mt-4">
            {t('sobre-mi-2')}
        </p>
        <p class="mt-4">
            {t('sobre-mi-3')}
        </p>
      </div>
      <div class="h-full flex items-center justify-center">
        <div class="w-full max-w-md h-full">
          <Image
            src={fotoSergio}
            alt="Imagen anime Sergio"
            class:list={["w-full h-full object-cover rounded-2xl shadow-xl border-4 border-white/30 rotate-6"]}
          />
        </div>
      </div>
    </div>
  </div>
</section>